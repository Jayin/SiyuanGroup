<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout.allmember_footer"
    android:orientation="horizontal" >
<!-- 分享暂时不做 -->
    <RelativeLayout
        android:id="@+id/acty_communicationdetail_footer_share"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/item_listview_bg_whitetogrey" >

        <TextView
            style="@style/TextView.base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/grey_lv_two"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/acty_communicationdetail_footer_comment"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/item_listview_bg_whitetogrey" >

        <TextView
            style="@style/TextView.base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="评论"
            android:textColor="@color/grey_lv_two"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/acty_communicationdetail_footer_favourite"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/item_listview_bg_whitetogrey" >

        <TextView
            style="@style/TextView.base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/grey_lv_two"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>