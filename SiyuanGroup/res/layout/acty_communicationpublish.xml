<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey" >

    <include layout="@layout/acty_communicationpublish_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical" >

            <TextView
                style="@style/TextView.base"
                android:singleLine="true"
                android:text="标题"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                style="@style/EditText.base"
                android:layout_marginTop="6dp" />

            <TextView
                style="@style/TextView.base"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:text="描述"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                style="@style/EditText.base"
                android:layout_marginTop="6dp"
                android:minLines="6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_preference_sigle"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView.black"
                    android:padding="6dp"
                    android:text="分享到" />

                <TextView
                    style="@style/TextView.base"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="6dp"
                    android:text="高尔夫小组"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_preference_sigle"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView.black"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="提及@" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_item_toright_blue" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>