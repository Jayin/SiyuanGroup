<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="6dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/item_lv_alldynamic_iv_portrait"
            style="@style/ImageView.avatar"
            android:src="@drawable/test_use_head" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/item_lv_alldynamic_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp"
            android:text="黄廉温"
            android:textColor="@color/blue_lv_two"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_lv_alldynamic_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_lv_alldynamic_tv_name"
            android:layout_marginTop="3dp"
            android:text="更新了空间信息"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_lv_alldynamic_tv_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="2013-12-28 13:42"
            android:textColor="@color/grey_lv_two"
            android:textSize="11sp" />
    </RelativeLayout>

</LinearLayout>