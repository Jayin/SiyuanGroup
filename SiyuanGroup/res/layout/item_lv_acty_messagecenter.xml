<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_item_whit2grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_avatar"
            style="@style/ImageView.avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_username"
                    style="@style/TextView.black"
                    android:layout_weight="1"
                    android:text="Jayin Ton" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/TextView.black"
                    android:text="1-30"
                    android:textColor="@color/grey_lv_two"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/TextView.black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginTop="6dp"
                    android:singleLine="true"
                    android:text="双核手机就是流弊。。。"
                    android:textColor="@color/grey_lv_forth"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_unreadcount"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/tv_round_blue"
                    android:gravity="center"
                    android:text="22+"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_1" />

</LinearLayout>