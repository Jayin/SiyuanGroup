<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/grey_lv_two" />

    <TextView
        android:id="@+id/frame_acty_activityinfo_introduce_name"
        style="@style/TextView.base"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/frame_acty_circle_groupinfo_btn_starttime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/btn_preference_sigle"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextView.base"
            android:padding="6dp"
            android:text="活动时间"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/frame_acty_circle_groupinfo_tv_starttime"
            style="@style/TextView.base"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="6dp"
            android:text="null"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/frame_acty_circle_groupinfo_btn_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/btn_preference_sigle"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextView.base"
            android:padding="6dp"
            android:text="报名截止"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/frame_acty_circle_groupinfo_tv_deadline"
            style="@style/TextView.base"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="6dp"
            android:text="null"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>