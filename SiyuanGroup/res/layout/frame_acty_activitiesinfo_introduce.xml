<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@color/grey_lv_two" />

        <TextView
            android:id="@+id/frame_acty_activityinfo_introduce_name"
            style="@style/TextView.base"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:text="Goft"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/frame_acty_circle_groupinfo_btn_starttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_preference_sigle"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextView.base"
                android:padding="6dp"
                android:text="活动时间"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_starttime"
                style="@style/TextView.base"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="6dp"
                android:text="2014-1-27"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_acty_circle_groupinfo_btn_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_preference_sigle"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextView.base"
                android:padding="6dp"
                android:text="报名截止"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_deadline"
                style="@style/TextView.base"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="6dp"
                android:text="null"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_acty_circle_groupinfo_btn_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_preference_sigle"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextView.base"
                android:padding="6dp"
                android:text="活动费用"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_money"
                style="@style/TextView.base"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="6dp"
                android:text="699"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_acty_circle_groupinfo_btn_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_preference_sigle"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextView.base"
                android:padding="6dp"
                android:text="报名人数"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_applyNum"
                style="@style/TextView.base"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="6dp"
                android:text="10/80"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_acty_circle_groupinfo_btn_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_preference_sigle"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextView.base"
                android:padding="6dp"
                android:text="活动地点"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/TextView.base"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="6dp"
                android:text="广州数码港国际酒店"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_acty_circle_groupinfo_btn_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_preference_sigle"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextView.base"
                android:padding="6dp"
                android:text="活动时长"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_duration"
                style="@style/TextView.base"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="6dp"
                android:text="2day"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_preference_first_normal"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextView.base"
                android:padding="6dp"
                android:text="活动说明"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/ic_preference_last_normal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_description"
                style="@style/TextView.base"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="6dp"
                android:text="1.必须报名 \n2.自备工具\n3.有问题请联系活动发起人"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        
    </LinearLayout>

</ScrollView>