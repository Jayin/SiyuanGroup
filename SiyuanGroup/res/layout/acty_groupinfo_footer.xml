<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout.allmember_footer"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/acty_groupinfo_footer_groupInfo"
        android:layout_width="1dp"
        android:layout_height="match_parent"
    android:background="@color/blue_nav_bg_press"
        android:layout_weight="1" >

        <TextView
            style="@style/TextView.base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="圈子信息"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/acty_groupinfo_footer_groupMenber"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            style="@style/TextView.base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="圈子成员"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/acty_groupinfo_footer_groupShare"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            style="@style/TextView.base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="圈子讨论"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>