<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/acty_allmember_header" />

    <ViewFlipper
        android:id="@+id/acty_allmember_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.alumnigroup.widget.PullAndLoadListView
                android:id="@+id/acty_allmember_lv_allmember"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" >
            </com.alumnigroup.widget.PullAndLoadListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.alumnigroup.widget.PullAndLoadListView
                android:id="@+id/acty_allmember_lv_myfriend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" >
            </com.alumnigroup.widget.PullAndLoadListView>
        </LinearLayout>
    </ViewFlipper>

    <include layout="@layout/acty_allmember_footer" />

</LinearLayout>