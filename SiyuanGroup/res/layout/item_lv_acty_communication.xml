<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" >

        <ImageView
            android:id="@+id/item_lv_acty_comminication_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_image_load_loading" />

        <TextView
            android:id="@+id/item_lv_acty_comminication_name"
            style="@style/TextView.black"
            android:layout_alignTop="@+id/item_lv_acty_comminication_head"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_lv_acty_comminication_head"
            android:text="黄廉温" />

        <TextView
            android:id="@+id/item_lv_acty_comminication_major"
            style="@style/TextView.black"
            android:layout_alignBottom="@+id/item_lv_acty_comminication_head"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_lv_acty_comminication_head"
            android:text="computer science" />

        <TextView
            android:id="@+id/item_lv_acty_comminication_time"
            style="@style/TextView.black"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:text="2013-10-12 09:20"
            android:textColor="@color/grey_lv_two"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_listView_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp" >

        <TextView
            android:id="@+id/item_lv_acty_comminication_title"
            style="@style/TextView.black"
            android:text="我是标题，我是用来测试的，"
            android:textColor="@color/blue_lv_third"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_lv_acty_comminication_content"
            style="@style/TextView.black"
            android:layout_marginTop="4dp"
            android:text="我是内容，我是用来测试的，但是我的内容是可以多有一点字体的。"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_btn_look" />

        <TextView
            android:id="@+id/textView2"
            style="@style/TextView.black"
            android:layout_marginLeft="4dp"
            android:text="查看(100)"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_btn_comment" />

        <TextView
            android:id="@+id/textView1"
            style="@style/TextView.black"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:text="评论(20)"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>