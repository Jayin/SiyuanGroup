<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_lv_message"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/item_lv_message_tv_typetitle"
                style="@style/TextView.base"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="好友申请"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/item_lv_message_tv_datetime"
                style="@style/TextView.base"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="2014/1/11"
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_lv_message_buttom"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/item_lv_message_iv_portrait"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/aa_po2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_lv_message_tv_name"
                    style="@style/TextView.base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄廉温"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/item_lv_message_tv_append"
                    style="@style/TextView.base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:text="我是附加信息..."
                    android:textColor="@color/grey_lv_third" />
            </LinearLayout>

            <Button
                android:id="@+id/item_lv_message_btn_apree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_item_lv_message"
                android:text="同意"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_lv_message_tv_apreeed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="已同意"
                android:textColor="#555555"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>