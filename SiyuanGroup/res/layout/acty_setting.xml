<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/acty_setting_header" />

    <LinearLayout
        android:id="@+id/acty_setting_btn_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_preference_sigle"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/aa_setting_wenhao" />

        <TextView
            style="@style/TextView.base"
            android:padding="6dp"
            android:text="功能介绍"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/acty_setting_btn_tickling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_preference_sigle"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/aa_setting_wenhao" />

        <TextView
            style="@style/TextView.base"
            android:padding="6dp"
            android:text="意见反馈"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/acty_setting_btn_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_preference_sigle"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/aa_setting_wenhao" />

        <TextView
            style="@style/TextView.base"
            android:padding="6dp"
            android:text="关于校友群"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/acty_setting_btn_quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_common_red" >

        <TextView
            style="@style/TextView.base"
            android:layout_centerInParent="true"
            android:text="退出当前账号" />
    </RelativeLayout>

</LinearLayout>