<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_listview_bg_whitetogrey"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_avater"
            style="@style/ImageView.avatar"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_username"
                    style="@style/TextView.base"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="marchen"
                    android:textColor="@color/blue_lv_third"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_deadline"
                    style="@style/TextView.base"
                    android:layout_marginRight="4dp"
                    android:text="2013-11-30 21:00:00"
                    android:textColor="@color/grey_lv_third"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_major"
                style="@style/TextView.base"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="哈尔滨工业大学计算机科学与技术图像处理方向"
                android:textColor="@color/grey_lv_third"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_image_status_on" />

        <TextView
            android:id="@+id/tv_projectname"
            style="@style/TextView.base"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="校园助手ETips百万用户求A轮融资"
            android:textColor="@color/blue_lv_third"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_description"
        style="@style/TextView.base"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="XTuOne团队成员均由在校大学生为同一个兴趣与梦想构建而成。一路走来，虽然经历过失败，经历过曲折，但只为一份坚持。如今，团队成员已经越趋专业，开发范围包括iPhone、Android、WP7等，针对各种平台的用户体验上有独到设计方案，让用户做最少的思考，做最有价值的事情。"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <com.custom.view.FlowLayout
        android:id="@+id/flowlayout_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="6dp"
        horizontalSpacing="6dip"
        android:gravity="left" >

        <ImageView
            android:id="@+id/iv_pic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:maxHeight="70dp"
                android:maxWidth="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_image_load_normal" />

        <ImageView
            android:id="@+id/iv_pic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:maxHeight="70dp"
                android:maxWidth="70dp"
            android:scaleType="fitCenter"
            android:paddingLeft="4dp"
            android:src="@drawable/ic_image_load_normal" />

        <ImageView
            android:id="@+id/iv_pic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:maxHeight="70dp"
                android:maxWidth="70dp"
            android:scaleType="fitCenter"      android:paddingLeft="4dp"
            android:src="@drawable/ic_image_load_normal" />
    </com.custom.view.FlowLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:gravity="right" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_item_collection_blue" />

            <TextView
                android:id="@+id/tv_numFavour"
                style="@style/TextView.base"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:gravity="right"
                android:text="收藏(14)"
                android:textColor="@color/grey_lv_forth"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_item_comment_blue" />

            <TextView
                android:id="@+id/tv_numComment"
                style="@style/TextView.base"
                android:layout_marginLeft="2dp"
                android:gravity="right"
                android:text="询问(119)"
                android:textColor="@color/grey_lv_forth"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_1" />

</LinearLayout>