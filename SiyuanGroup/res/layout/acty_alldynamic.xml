<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/acty_alldynamic_header"/>
    
    <LinearLayout
        android:id="@+id/acty_alldynamic_ll"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="#FFFFFF" >
 
        <TextView
            android:id="@+id/acty_alldynamic_alldynamic_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="全站动态"
            android:textColor="#000000"
            android:background="@color/white"
            android:textSize="20.0dip" />
 
        <TextView
            android:id="@+id/acty_alldynamic_frienddynamic_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="好友动态"
            android:textColor="#000000"
            android:textSize="20.0dip" />
 
    </LinearLayout>
 
    <ImageView
        android:id="@+id/cursor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/alldynamic_cursor" 
        android:background="@color/white"/>
 
    <android.support.v4.view.ViewPager
        android:id="@+id/acty_alldynamic_vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#000000"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />"

</LinearLayout>
