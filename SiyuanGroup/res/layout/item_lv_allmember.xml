<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_listview_bg_whitetogrey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/item_lv_allmember_avatar"
                style="@style/ImageView.avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_image_load_loading" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp" >

            <TextView
                android:id="@+id/item_lv_allmemeber_name"
                style="@style/TextView.base"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:text="null"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_lv_allmemeber_major"
                style="@style/TextView.base"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/item_lv_allmemeber_name"
                android:layout_marginTop="6dp"
                android:text="null"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_lv_allmemeber_grade"
                style="@style/TextView.base"
                android:layout_above="@+id/item_lv_allmemeber_major"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/item_lv_allmemeber_name"
                android:text="null"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                  >

                <ImageView
                    android:id="@+id/item_lv_allmember_online"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_image_online" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
       
        android:background="@color/grey_lv_two" >
    </View>

</LinearLayout>