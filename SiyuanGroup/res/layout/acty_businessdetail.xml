<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/acty_businessdetail_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="4dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/item_lv_acty_business_iv_avater"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_image_load_loading" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/item_lv_acty_business_tv_name"
                            style="@style/TextView.base"
                            android:gravity="left"
                            android:text="marchen"
                            android:textColor="@color/blue_lv_third"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/item_lv_acty_business_tv_time"
                            style="@style/TextView.base"
                            android:layout_marginTop="4dp"
                            android:text="2013-11-30 21:00:00"
                            android:textColor="@color/grey_lv_third"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_item_toright_blue" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_lv_two" />

            <LinearLayout
                android:id="@+id/frame_acty_circle_groupinfo_btn_groupBuilder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_preference_sigle"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView.base"
                    android:padding="6dp"
                    android:text="截止日期"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/frame_acty_circle_groupinfo_tv_groupBuilder"
                    style="@style/TextView.base"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="6dp"
                    android:text="2013-6-7"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
               <LinearLayout
                android:id="@+id/frame_acty_circle_groupinfo_btn_groupBuilder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_preference_sigle"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView.base"
                    android:padding="6dp"
                    android:text="项目"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/frame_acty_circle_groupinfo_tv_groupBuilder"
                    style="@style/TextView.base"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="6dp"
                    android:text="Golang china"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_preference_first_normal"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView.base"
                    android:padding="6dp"
                    android:text="项目介绍"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/ic_preference_last_normal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/frame_acty_circle_groupinfo_tv_groupRule"
                    style="@style/TextView.base"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="6dp"
                    android:text="XTuOne是一支踏实的，拥有激情和梦想的开发团队。X表示未知，代表对未知事物的探索。Tu 表示突出，提醒不断进取，追求卓越。One 表示是一个团结的团队。专注于移动应用开发，重视用户体验。坚持让用户做最少的思考，做最有价值的事情."
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_preference_first_normal"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView.base"
                    android:padding="6dp"
                    android:text="项目询问"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/ic_preference_last_normal"
                android:orientation="horizontal" >

                <com.alumnigroup.widget.CommentView
                    android:id="@+id/commentlist"
                    style="@style/TextView.base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:minHeight="30dp"
                    android:textColor="@color/black"
                    android:textSize="12sp" >
                </com.alumnigroup.widget.CommentView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/frame_acty_circle_groupinfo_btn_joingroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/btn_common_green" >

                    <TextView
                        style="@style/TextView.base"
                        android:layout_centerInParent="true"
                        android:text="编辑" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frame_acty_circle_groupinfo_btn_invitaition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/btn_common_red" >

                    <TextView
                        style="@style/TextView.base"
                        android:layout_centerInParent="true"
                        android:text="结束" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frame_acty_circle_groupinfo_btn_exitgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/btn_common_red" >

                    <TextView
                        style="@style/TextView.base"
                        android:layout_centerInParent="true"
                        android:text="删除" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frame_acty_circle_groupinfo_btn_deletegroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/btn_common_green" >

                    <TextView
                        style="@style/TextView.base"
                        android:layout_centerInParent="true"
                        android:text="收藏" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frame_acty_circle_groupinfo_btn_deletegroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/btn_common_green" >

                    <TextView
                        style="@style/TextView.base"
                        android:layout_centerInParent="true"
                        android:text="询问" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>