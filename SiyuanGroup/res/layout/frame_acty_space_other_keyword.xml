<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey" >

        <TextView
            android:id="@+id/acty_space_other_keyword_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:text="关键字"
            android:textColor="#0a6ca2"
            android:textSize="18dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/acty_space_other_keyword_hr"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#0a6ca2" />

    <com.alumnigroup.widget.OutoLinefeedLayout
        android:id="@+id/acty_space_other_keyword_OutoLinefeed"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white" >

        <!-- 用来装关键字的 ,动态加进来 -->

    </com.alumnigroup.widget.OutoLinefeedLayout>

</LinearLayout>